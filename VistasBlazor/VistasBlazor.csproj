<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
	  <StaticWebAssetBasePath>/VistasBlazor</StaticWebAssetBasePath>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="Layout\NavLinks.razor" />
    <Content Remove="Layout\NavMenu.razor" />
    <Content Remove="Layout\TopNavigation.razor" />
    <Content Remove="wwwroot\css\main.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Layout\NavMenu.razor.css" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="9.0.9" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="9.0.9" PrivateAssets="all" />
  </ItemGroup>

</Project>
