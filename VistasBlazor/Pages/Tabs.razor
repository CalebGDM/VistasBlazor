@page "/tabs"

<PageTitle>Tabs Example</PageTitle>


<div class="tabs-container">
    <h3>Ejemplo de Tabs en Blazor</h3>

    <!-- Tabs Navigation -->
    <ul class="nav tab-nav-tabs" role="tablist">
        <li class="tab-nav-item" role="presentation">
            <button class="tab-nav-link @(activeTab == 0 ? "active" : "")"
                    @onclick="() => SetActiveTab(0)" type="button">
                Home
            </button>
        </li>
        <li class="tab-nav-item" role="presentation">
            <button class="tab-nav-link @(activeTab == 1 ? "active" : "")"
                    @onclick="() => SetActiveTab(1)" type="button">
                Perfil
            </button>
        </li>
        <li class="tab-nav-item" role="presentation">
            <button class="tab-nav-link @(activeTab == 2 ? "active" : "")"
                    @onclick="() => SetActiveTab(2)" type="button">
                Contacto
            </button>
        </li>
        <li class="tab-nav-item" role="presentation">
            <button class="tab-nav-link @(activeTab == 3 ? "active" : "")"
                    @onclick="() => SetActiveTab(3)" type="button">
                Configuración
            </button>
        </li>
    </ul>

    <!-- Tabs Content -->
    <div class="tab-content">
        @if (activeTab == 0)
        {
            <div class="tab-pane fade show active">
                <h4>Bienvenido a Home</h4>
                <p>Este es el contenido de la pestaña Home. Aquí puedes mostrar información general o un dashboard.</p>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
            </div>
        }
        else if (activeTab == 1)
        {
            <div class="tab-pane fade show active">
                <h4>Perfil de Usuario</h4>
                <div class="mb-3">
                    <label class="form-label">Nombre:</label>
                    <input type="text" class="form-control" value="Juan Pérez" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email:</label>
                    <input type="email" class="form-control" value="juan@example.com" />
                </div>
                <button class="btn btn-primary">Guardar Cambios</button>
            </div>
        }
        else if (activeTab == 2)
        {
            <div class="tab-pane fade show active">
                <h4>Información de Contacto</h4>
                <ul>
                    <li><strong>Teléfono:</strong> +52 123 456 7890</li>
                    <li><strong>Email:</strong> contacto@example.com</li>
                    <li><strong>Dirección:</strong> Colima, México</li>
                </ul>
                <p class="mt-3">Puedes contactarnos en cualquier momento durante el horario de oficina.</p>
            </div>
        }
        else if (activeTab == 3)
        {
            <div class="tab-pane fade show active">
                <h4>Configuración</h4>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" id="notifications" checked />
                    <label class="form-check-label" for="notifications">Activar notificaciones</label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" id="darkmode" />
                    <label class="form-check-label" for="darkmode">Modo oscuro</label>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="updates" checked />
                    <label class="form-check-label" for="updates">Actualizaciones automáticas</label>
                </div>
                <button class="btn btn-success">Aplicar Configuración</button>
            </div>
        }
    </div>
</div>

@code {
    private int activeTab = 0;

    private void SetActiveTab(int tab)
    {
        activeTab = tab;
    }
}
